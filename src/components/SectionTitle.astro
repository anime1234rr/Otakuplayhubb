---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="my-12 text-center">
  <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 dark:text-white">
    {title}
  </h2>
  {subtitle && (
    <p class="mt-3 text-lg text-neutral-600 dark:text-neutral-400 max-w-2xl mx-auto">
      {subtitle}
    </p>
  )}
  <div class="mt-4 flex justify-center">
    <div class="h-1 w-20 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full"></div>
  </div>
</div>

