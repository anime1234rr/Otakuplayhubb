---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  link: string;
}

const { title, description, imageUrl, link } = Astro.props;
---

<div class="group flex flex-col h-full overflow-hidden bg-white dark:bg-neutral-900 rounded-xl border border-neutral-200 dark:border-neutral-800 shadow-sm hover:shadow-md transition-all duration-300">
  <div class="relative overflow-hidden aspect-video">
    <img 
      src={imageUrl || "/placeholder.svg"} 
      alt={title} 
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
    />
  </div>
  
  <div class="flex flex-col flex-grow p-5">
    <h3 class="text-xl font-bold text-neutral-800 dark:text-white">{title}</h3>
    <p class="mt-2 text-neutral-600 dark:text-neutral-400">{description}</p>
    
    <div class="mt-auto pt-4">
      <a 
        href={link} 
        class="inline-flex items-center justify-center w-full px-4 py-2.5 bg-gradient-to-r from-blue-600 to-blue-800 text-white font-medium rounded-lg hover:from-blue-700 hover:to-blue-900 transition-colors duration-300"
      >
        Explorar
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</div>

